import java.util.Scanner;
class pronic
{
    public static void main(String args[])
    {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int c=0;
        for(int i=0;i<Math.sqrt(n)+1;i++)
        {
            if(n==(i*(i+1)))
            {
            c=c+1;
            break;
            }
        }
        if(c==1)
        System.out.println("YES");
        else
        System.out.println("NO");
    }
}
